<%- include('header', {title: 'UFO Shapes Sightings'}) %>

<div class="d-flex justify-content-center p-3">
  <h1>Shape Sighting for <%= shape %></h1>
</div>

<div class="container-fluid">
  <div class="row">
    <% for( let i = 0; i < sightings.length; i++ ) { %> <% if
    (sightings[i].shape === shape) { %>

    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <% const link = `/sighting/${i}` %> <% const index = i %>
          <a href="<%= link %> ">Sightings <%= index %> </a>
        </div>
      </div>
    </div>
    <% } %><% } %>
  </div>
</div>

<%- include('footer'); -%>
